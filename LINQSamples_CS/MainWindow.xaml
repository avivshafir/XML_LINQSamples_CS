<Window x:Class="LINQSamples_CS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LINQ to XML Samples"
        FontSize="18"
        Height="400"
        Width="400"
        WindowStartupLocation="CenterScreen">
  <Grid>
    <StackPanel HorizontalAlignment="Center">
      <Button Name="btnCreation"
              Content="Create XML Documents"
              Style="{StaticResource PDSALargeButton}" Click="btnCreation_Click" />
      <Button Name="btnQuery"
              Content="Query XML Documents"
              Style="{StaticResource PDSALargeButton}" Click="btnQuery_Click" />
      <Button Name="btnAggregate"
              Content="Aggregation Methods"
              Style="{StaticResource PDSALargeButton}" Click="btnAggregate_Click" />
      <Button Name="btnTypes"
              Content="Working with Classes"
              Style="{StaticResource PDSALargeButton}" Click="btnTypes_Click" />
      <Button Name="btnModification"
              Content="Add, Edit and Delete"
              Style="{StaticResource PDSALargeButton}" Click="btnModification_Click" />
      <Button Name="btnWrapperClass"
              Content="Wrapper Class"
              Style="{StaticResource PDSALargeButton}"
              Click="btnWrapperClass_Click" />
    </StackPanel>
  </Grid>
</Window>
